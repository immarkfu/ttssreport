# Tushare API Token（必填）
TUSHARE_TOKEN=your_tushare_token_here

# 数据库配置（MySQL - 由 docker-compose 管理）
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=ttssuser
MYSQL_PASSWORD=ttsspassword
MYSQL_DATABASE=ttssreport

# 火山云短信配置（必填）
VOLCENGINE_SMS_ACCESS_KEY=your_volcengine_access_key_here
VOLCENGINE_SMS_SECRET_KEY=your_volcengine_secret_key_here
VOLCENGINE_SMS_SIGN_NAME=your_sign_name_here
VOLCENGINE_SMS_TEMPLATE_ID=your_template_id_here
VOLCENGINE_SMS_ENDPOINT=https://sms.volcengineapi.com
VOLCENGINE_SMS_REGION=cn-north-1

# JWT 认证配置
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
